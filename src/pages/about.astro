---
import BaseLayout from '../components/Layout/BaseLayout.astro';
import { SITE_CONFIG } from '../config';

const seo = {
  title: `About | ${SITE_CONFIG.title}`,
  description: `Learn about ${SITE_CONFIG.title} and our approach to financial independence through intentional income reduction.`,
  canonicalUrl: `${SITE_CONFIG.url}/about`,
};
---

<BaseLayout title="About" description={SITE_CONFIG.description} seo={seo}>
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-8">About BurnoutFIRE</h1>
    
    <div class="prose prose-lg max-w-none">
      <p class="text-xl text-gray-700 mb-6">
        {SITE_CONFIG.description}
      </p>

      <h2 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Our Philosophy</h2>
      <p class="text-gray-700 mb-4">
        {SITE_CONFIG.brand.philosophy}
      </p>

      <h2 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Core Beliefs</h2>
      <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
        {SITE_CONFIG.brand.coreBeliefs.map(belief => (
          <li>{belief}</li>
        ))}
      </ul>

      <h2 class="text-2xl font-bold text-gray-900 mt-8 mb-4">Who This Is For</h2>
      <ul class="list-disc list-inside space-y-2 text-gray-700 mb-6">
        {SITE_CONFIG.brand.targetAudience.map(audience => (
          <li>{audience}</li>
        ))}
      </ul>

      <h2 class="text-2xl font-bold text-gray-900 mt-8 mb-4">About the Author</h2>
      <p class="text-gray-700 mb-4">
        {SITE_CONFIG.author.bio}
      </p>
      <p class="text-gray-600 text-sm">
        Location: {SITE_CONFIG.author.location}
      </p>
    </div>
  </div>
</BaseLayout>
