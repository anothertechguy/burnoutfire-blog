---
import BaseLayout from '../../components/Layout/BaseLayout.astro';
import { SITE_CONFIG } from '../../config';

const seo = {
  title: `Agent Configuration | ${SITE_CONFIG.title} Admin`,
  description: 'Configure agent prompts and parameters',
};
---

<BaseLayout title="Agent Configuration" description="Configure agents" seo={seo}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/admin" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">‚Üê Back to Dashboard</a>
        <h1 class="text-3xl font-bold text-gray-900">Agent Configuration</h1>
        <p class="text-gray-600 mt-2">Modify agent prompts, parameters, and behavior</p>
      </div>

      <div class="space-y-6">
        <!-- Writing Agent Prompts -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Writing Agent Prompts</h2>
          <p class="text-sm text-gray-600 mb-4">Edit these prompts to change how the writing agent creates content.</p>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Tone Prompt</label>
              <textarea 
                id="tone-prompt"
                rows="8"
                class="w-full border border-gray-300 rounded-md p-3 font-mono text-sm"
                placeholder="Loading..."
              ></textarea>
              <p class="text-xs text-gray-500 mt-1">Defines the writing style and tone</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Structure Prompt</label>
              <textarea 
                id="structure-prompt"
                rows="6"
                class="w-full border border-gray-300 rounded-md p-3 font-mono text-sm"
                placeholder="Loading..."
              ></textarea>
              <p class="text-xs text-gray-500 mt-1">Defines content structure and organization</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Research Integration Prompt</label>
              <textarea 
                id="research-prompt"
                rows="6"
                class="w-full border border-gray-300 rounded-md p-3 font-mono text-sm"
                placeholder="Loading..."
              ></textarea>
              <p class="text-xs text-gray-500 mt-1">How to integrate competitive research</p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Quality Prompt</label>
              <textarea 
                id="quality-prompt"
                rows="6"
                class="w-full border border-gray-300 rounded-md p-3 font-mono text-sm"
                placeholder="Loading..."
              ></textarea>
              <p class="text-xs text-gray-500 mt-1">Quality standards and requirements</p>
            </div>
          </div>

          <button 
            onclick="savePrompts()"
            class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
          >
            Save Prompts
          </button>
        </div>

        <!-- Agent Parameters -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Agent Parameters</h2>
          <p class="text-sm text-gray-600 mb-4">Adjust numerical parameters that control agent behavior.</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Target Word Count</label>
              <input 
                type="number"
                id="target-word-count"
                class="w-full border border-gray-300 rounded-md p-2"
                placeholder="2500"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Min Word Count</label>
              <input 
                type="number"
                id="min-word-count"
                class="w-full border border-gray-300 rounded-md p-2"
                placeholder="2000"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Max Word Count</label>
              <input 
                type="number"
                id="max-word-count"
                class="w-full border border-gray-300 rounded-md p-2"
                placeholder="4000"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Tone Strictness (0-1)</label>
              <input 
                type="number"
                step="0.1"
                id="tone-strictness"
                class="w-full border border-gray-300 rounded-md p-2"
                placeholder="0.8"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Keyword Density (0-1)</label>
              <input 
                type="number"
                step="0.01"
                id="keyword-density"
                class="w-full border border-gray-300 rounded-md p-2"
                placeholder="0.02"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Internal Links per 1000 words</label>
              <input 
                type="number"
                id="internal-link-freq"
                class="w-full border border-gray-300 rounded-md p-2"
                placeholder="3"
              />
            </div>
          </div>

          <div class="mt-4 space-y-2">
            <label class="flex items-center">
              <input 
                type="checkbox"
                id="include-personal-narrative"
                class="mr-2"
              />
              <span class="text-sm text-gray-700">Include Personal Narrative</span>
            </label>
            <label class="flex items-center">
              <input 
                type="checkbox"
                id="include-calculations"
                class="mr-2"
              />
              <span class="text-sm text-gray-700">Include Calculations</span>
            </label>
          </div>

          <button 
            onclick="saveParameters()"
            class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
          >
            Save Parameters
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Load current configuration
    async function loadConfig() {
      try {
        // In production, this would fetch from an API or config file
        // For now, we'll load from the actual config files
        const response = await fetch('/api/config/prompts');
        if (response.ok) {
          const data = await response.json();
          document.getElementById('tone-prompt').value = data.writing?.tone || '';
          document.getElementById('structure-prompt').value = data.writing?.structure || '';
          document.getElementById('research-prompt').value = data.writing?.researchIntegration || '';
          document.getElementById('quality-prompt').value = data.writing?.quality || '';
        } else {
          // Fallback: show instructions
          document.getElementById('tone-prompt').value = 'Edit src/utils/agents/config/prompts.ts to modify prompts';
        }
      } catch (error) {
        console.error('Error loading config:', error);
        document.getElementById('tone-prompt').value = 'Edit src/utils/agents/config/prompts.ts to modify prompts';
      }
    }

    async function savePrompts() {
      const prompts = {
        tone: document.getElementById('tone-prompt').value,
        structure: document.getElementById('structure-prompt').value,
        researchIntegration: document.getElementById('research-prompt').value,
        quality: document.getElementById('quality-prompt').value,
      };

      // In production, this would save to backend
      alert('Prompts saved! (In production, this would update the config files)');
      console.log('Prompts to save:', prompts);
    }

    async function saveParameters() {
      const params = {
        targetWordCount: parseInt(document.getElementById('target-word-count').value),
        minWordCount: parseInt(document.getElementById('min-word-count').value),
        maxWordCount: parseInt(document.getElementById('max-word-count').value),
        toneStrictness: parseFloat(document.getElementById('tone-strictness').value),
        keywordDensity: parseFloat(document.getElementById('keyword-density').value),
        internalLinkFrequency: parseInt(document.getElementById('internal-link-freq').value),
        includePersonalNarrative: document.getElementById('include-personal-narrative').checked,
        includeCalculations: document.getElementById('include-calculations').checked,
      };

      alert('Parameters saved! (In production, this would update the config files)');
      console.log('Parameters to save:', params);
    }

    // Load on page load
    loadConfig();
  </script>
</BaseLayout>
