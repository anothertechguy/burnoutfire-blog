---
import BaseLayout from '../../components/Layout/BaseLayout.astro';
import { getAllPosts } from '../../utils/posts';
import { SITE_CONFIG } from '../../config';

const posts = await getAllPosts();
const seo = {
  title: `Content Management | ${SITE_CONFIG.title} Admin`,
  description: 'Manage blog content',
};
---

<BaseLayout title="Content Management" description="Manage content" seo={seo}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/admin" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">‚Üê Back to Dashboard</a>
        <h1 class="text-3xl font-bold text-gray-900">Content Management</h1>
        <p class="text-gray-600 mt-2">Edit posts, review agent output, and fine-tune content</p>
      </div>

      <!-- Posts List -->
      <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">All Posts</h2>
        </div>
        <div class="divide-y divide-gray-200">
          {posts.map(post => (
            <div class="p-6 hover:bg-gray-50 transition-colors">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">
                    <a href={`/posts/${post.slug}`} class="hover:text-blue-600" target="_blank">
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="text-sm text-gray-600 mb-2">{post.data.description}</p>
                  <div class="flex items-center space-x-4 text-xs text-gray-500">
                    <span>{new Date(post.data.publishDate).toLocaleDateString()}</span>
                    {post.data.readTime && <span>{post.data.readTime} min read</span>}
                    {post.data.category && <span>{post.data.category}</span>}
                  </div>
                </div>
                <div class="flex space-x-2 ml-4">
                  <a 
                    href={`/admin/content/edit/${post.slug}`}
                    class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition-colors"
                  >
                    Edit
                  </a>
                  <a
                    href={`/posts/${post.slug}`}
                    target="_blank"
                    class="px-3 py-1 bg-gray-600 text-white text-sm rounded hover:bg-gray-700 transition-colors inline-block"
                  >
                    Preview
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <script>
    function previewPost(slug) {
      window.open(`/posts/${slug}`, '_blank');
    }
  </script>
</BaseLayout>
