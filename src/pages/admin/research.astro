---
import BaseLayout from '../../components/Layout/BaseLayout.astro';
import { findBestNiches } from '../../utils/agents/research/enhancedSerpAnalysis';
import { SITE_CONFIG } from '../../config';

const bestNiches = findBestNiches(10);

const seo = {
  title: `Research Dashboard | ${SITE_CONFIG.title} Admin`,
  description: 'View research insights',
};
---

<BaseLayout title="Research Dashboard" description="Research insights" seo={seo}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/admin" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">‚Üê Back to Dashboard</a>
        <h1 class="text-3xl font-bold text-gray-900">Research Dashboard</h1>
        <p class="text-gray-600 mt-2">Competitor analysis, SERP insights, and wide moat opportunities</p>
      </div>

      <!-- Wide Moat Opportunities -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Best Wide Moat Opportunities</h2>
        <p class="text-sm text-gray-600 mb-4">Niches with defensible competitive advantages and low competition</p>
        <div class="space-y-4">
          {bestNiches.map((niche, i) => (
            <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 transition-colors">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <span class="text-2xl font-bold text-gray-400">#{i + 1}</span>
                    <h3 class="text-lg font-semibold text-gray-900">{niche.keyword}</h3>
                    <span class={`px-2 py-1 text-xs rounded font-medium ${
                      niche.competition === 'very_low' 
                        ? 'bg-green-100 text-green-800' 
                        : niche.competition === 'low'
                        ? 'bg-blue-100 text-blue-800'
                        : 'bg-yellow-100 text-yellow-800'
                    }`}>
                      {niche.competition.replace('_', ' ')}
                    </span>
                    <span class={`px-2 py-1 text-xs rounded font-medium ${
                      niche.opportunity === 'high'
                        ? 'bg-purple-100 text-purple-800'
                        : 'bg-gray-100 text-gray-800'
                    }`}>
                      {niche.opportunity} opportunity
                    </span>
                  </div>
                  <p class="text-sm text-gray-700 mb-2"><strong>Moat:</strong> {niche.moat}</p>
                  <p class="text-sm text-gray-700 mb-2"><strong>Strategy:</strong> {niche.strategy}</p>
                </div>
                <div class="text-right ml-4">
                  <div class="text-sm text-gray-600">Difficulty</div>
                  <div class="text-2xl font-bold text-gray-900">{niche.difficulty}</div>
                  <div class="text-xs text-gray-500">/ 100</div>
                </div>
              </div>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4 pt-4 border-t">
                <div>
                  <p class="text-xs font-medium text-gray-700 mb-1">Related Keywords:</p>
                  <div class="flex flex-wrap gap-1">
                    {niche.relatedKeywords.slice(0, 5).map(kw => (
                      <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">{kw}</span>
                    ))}
                  </div>
                </div>
                <div>
                  <p class="text-xs font-medium text-gray-700 mb-1">Content Ideas:</p>
                  <ul class="text-xs text-gray-600 space-y-1">
                    {niche.contentIdeas.slice(0, 3).map(idea => (
                      <li>‚Ä¢ {idea}</li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Competitor Analysis -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Competitor Analysis</h2>
        <div class="space-y-4">
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Top Competitors</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="border border-gray-200 rounded p-4">
                <h4 class="font-semibold text-sm text-gray-900 mb-2">MrMoneyMustache</h4>
                <p class="text-xs text-gray-600">Focus: FIRE philosophy, early retirement</p>
                <p class="text-xs text-gray-500 mt-2">Avg word count: 1,800 | Last analyzed: <button onclick="runResearch('MrMoneyMustache')" class="text-blue-600 hover:underline cursor-pointer">Run analysis</button></p>
              </div>
              <div class="border border-gray-200 rounded p-4">
                <h4 class="font-semibold text-sm text-gray-900 mb-2">Financial Samurai</h4>
                <p class="text-xs text-gray-600">Focus: High income FIRE, wealth building</p>
                <p class="text-xs text-gray-500 mt-2">Avg word count: 1,500 | Last analyzed: <button onclick="runResearch('Financial Samurai')" class="text-blue-600 hover:underline cursor-pointer">Run analysis</button></p>
              </div>
            </div>
          </div>
          <div class="mt-4">
            <button 
              id="run-all-research-btn"
              onclick="window.runAllResearch(event)"
              class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
            >
              Run Full Competitor Research
            </button>
            <p class="text-xs text-gray-500 mt-2">This will scrape and analyze all competitors</p>
            <p class="text-xs text-blue-600 mt-1">üí° Check browser console (F12) for detailed logs</p>
          </div>
        </div>
      </div>

      <!-- Content Gaps -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Content Gaps</h2>
        <div class="space-y-3">
          <div class="border-l-4 border-green-500 pl-4 py-2 bg-green-50">
            <h3 class="font-medium text-gray-900">High Priority</h3>
            <p class="text-sm text-gray-700">Intentional income reduction - Underserved by competitors</p>
            <p class="text-xs text-gray-500 mt-1">Traffic potential: High | Competition: Very Low | Moat: First mover advantage</p>
          </div>
          <div class="border-l-4 border-green-500 pl-4 py-2 bg-green-50">
            <h3 class="font-medium text-gray-900">High Priority</h3>
            <p class="text-sm text-gray-700">Dual income FIRE strategies - Limited coverage</p>
            <p class="text-xs text-gray-500 mt-1">Traffic potential: High | Competition: Low | Moat: Specific to common situation</p>
          </div>
          <div class="border-l-4 border-yellow-500 pl-4 py-2 bg-yellow-50">
            <h3 class="font-medium text-gray-900">Medium Priority</h3>
            <p class="text-sm text-gray-700">Cash holdings for high earners - Nuanced view missing</p>
            <p class="text-xs text-gray-500 mt-1">Traffic potential: Medium | Competition: Low | Moat: Contrarian angle</p>
          </div>
        </div>
      </div>

      <!-- SERP Insights -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">SERP Insights</h2>
        <div class="space-y-4">
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Featured Snippet Opportunities</h3>
            <ul class="text-sm text-gray-700 space-y-1">
              <li>‚Ä¢ "What is BurnoutFIRE?" - No current snippet (easy win)</li>
              <li>‚Ä¢ "How to reduce income intentionally?" - Weak snippet (can improve)</li>
              <li>‚Ä¢ "Dual income FIRE strategy" - No snippet (opportunity)</li>
            </ul>
          </div>
          <div>
            <h3 class="font-medium text-gray-900 mb-2">People Also Ask</h3>
            <ul class="text-sm text-gray-700 space-y-1">
              <li>‚Ä¢ "Is reducing income worth it?"</li>
              <li>‚Ä¢ "How much cash should high earners hold?"</li>
              <li>‚Ä¢ "BurnoutFIRE vs CoastFIRE?"</li>
              <li>‚Ä¢ "Can you achieve FIRE with lower income?"</li>
            </ul>
          </div>
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Wide Moat Keywords</h3>
            <div class="flex flex-wrap gap-2">
              {bestNiches.slice(0, 5).map(niche => (
                <span class="px-3 py-1 bg-purple-100 text-purple-800 text-sm rounded font-medium">
                  {niche.keyword}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Show loading state
    function showLoading(element, text) {
      element.disabled = true;
      element.dataset.originalText = element.textContent;
      element.innerHTML = `<span class="inline-block animate-spin mr-2">‚è≥</span>${text}`;
      element.classList.add('opacity-75', 'cursor-not-allowed');
    }

    // Hide loading state
    function hideLoading(element) {
      element.disabled = false;
      element.textContent = element.dataset.originalText || 'Run analysis';
      element.classList.remove('opacity-75', 'cursor-not-allowed');
    }

    // Show error message
    function showError(message) {
      const errorDiv = document.createElement('div');
      errorDiv.className = 'fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-lg z-50 max-w-md';
      errorDiv.innerHTML = `
        <div class="flex items-center justify-between">
          <span>‚ùå ${message}</span>
          <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-red-700 hover:text-red-900">√ó</button>
        </div>
      `;
      document.body.appendChild(errorDiv);
      setTimeout(() => errorDiv.remove(), 5000);
    }

    // Show success message
    function showSuccess(message) {
      const successDiv = document.createElement('div');
      successDiv.className = 'fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-lg z-50 max-w-md';
      successDiv.innerHTML = `
        <div class="flex items-center justify-between">
          <span>‚úÖ ${message}</span>
          <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-green-700 hover:text-green-900">√ó</button>
        </div>
      `;
      document.body.appendChild(successDiv);
      setTimeout(() => successDiv.remove(), 5000);
    }


    async function runResearch(competitor) {
      const button = event.target;
      showLoading(button, 'Analyzing...');
      
      try {
        // Use local API in dev, Netlify Function in prod
        const isLocal = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
        const apiUrl = isLocal 
          ? `/api/research/competitors-local?competitor=${encodeURIComponent(competitor)}`
          : `/.netlify/functions/research-competitors?competitor=${encodeURIComponent(competitor)}`;
        
        const response = await fetch(apiUrl, {
          method: 'GET',
          headers: { 'Content-Type': 'application/json' },
        });
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        
        if (data.success) {
          showSuccess(`Analysis complete for ${competitor}! Found ${data.profile?.samplePosts?.length || 0} posts analyzed.`);
          setTimeout(() => location.reload(), 2000);
        } else {
          throw new Error(data.error || 'Unknown error');
        }
      } catch (error) {
        console.error('Research error:', error);
        showError(`Research failed: ${error.message}. Check browser console for details.`);
        hideLoading(button);
      }
    }

    async function runAllResearch(event) {
      console.log('üîµ [RESEARCH] Button clicked!', { event, timestamp: new Date().toISOString() });
      
      try {
        if (!confirm('This will analyze all competitors via RSS feeds. This may take 30-60 seconds. Continue?')) {
          console.log('üîµ [RESEARCH] User cancelled');
          return;
        }
        
        console.log('üîµ [RESEARCH] User confirmed, starting research...');
        
        // Try multiple ways to find the button
        const buttonById = document.getElementById('run-all-research-btn');
        const buttonByEvent = event?.target;
        const buttonByQuery = document.querySelector('button[onclick*="runAllResearch"]');
        const button = buttonById || buttonByEvent || buttonByQuery;
        
        console.log('üîµ [RESEARCH] Button found:', {
          byId: !!buttonById,
          byEvent: !!buttonByEvent,
          byQuery: !!buttonByQuery,
          finalButton: button,
          buttonText: button?.textContent,
        });
        
        if (!button) {
          console.error('üî¥ [RESEARCH] ERROR: Could not find button element!');
          alert('‚ùå Error: Could not find button. Check console for details.');
          return;
        }
        
        showLoading(button, 'Researching all competitors...');
        console.log('üîµ [RESEARCH] Loading state set on button');
        
        // Show progress
        const progressDiv = document.createElement('div');
        progressDiv.id = 'research-progress';
        progressDiv.className = 'mt-4 p-4 bg-blue-50 border border-blue-200 rounded';
        progressDiv.innerHTML = '<p class="text-sm text-blue-700">‚è≥ Starting research... This will take 30-60 seconds.</p>';
        
        const buttonParent = button.parentElement;
        console.log('üîµ [RESEARCH] Button parent:', buttonParent);
        
        if (buttonParent) {
          buttonParent.appendChild(progressDiv);
          console.log('üîµ [RESEARCH] Progress div added to DOM');
        } else {
          console.error('üî¥ [RESEARCH] ERROR: Button has no parent element!');
        }
        
        // Use local API in dev, Netlify Function in prod
        const isLocal = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
        const apiUrl = isLocal 
          ? '/api/research/competitors-local'
          : '/.netlify/functions/research-competitors';
        
        console.log('üîµ [RESEARCH] API Configuration:', {
          hostname: window.location.hostname,
          isLocal,
          apiUrl,
          fullUrl: window.location.origin + apiUrl,
        });
        
        progressDiv.innerHTML = '<p class="text-sm text-blue-700">‚è≥ Fetching competitor RSS feeds...</p>';
        console.log('üîµ [RESEARCH] Making fetch request to:', apiUrl);
        
        const fetchStartTime = Date.now();
        const response = await fetch(apiUrl, {
          method: 'GET',
        });
        const fetchDuration = Date.now() - fetchStartTime;
        
        console.log('üîµ [RESEARCH] Fetch response received:', {
          status: response.status,
          statusText: response.statusText,
          ok: response.ok,
          headers: Object.fromEntries(response.headers.entries()),
          duration: `${fetchDuration}ms`,
        });
        
        if (!response.ok) {
          const errorText = await response.text();
          console.error('üî¥ [RESEARCH] HTTP Error:', {
            status: response.status,
            statusText: response.statusText,
            body: errorText,
          });
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        console.log('üîµ [RESEARCH] Parsing JSON response...');
        const data = await response.json();
        console.log('üîµ [RESEARCH] Response data:', {
          success: data.success,
          count: data.count,
          profilesCount: data.profiles?.length,
          hasError: !!data.error,
          fullData: data,
        });
        
        if (data.success) {
          const postsCount = data.profiles.reduce((sum, p) => sum + (p.samplePosts?.length || 0), 0);
          progressDiv.innerHTML = `<p class="text-sm text-green-700">‚úÖ Analyzed ${data.count || data.profiles.length} competitors!</p><p class="text-xs text-gray-600 mt-1">Found ${postsCount} posts total.</p>`;
          showSuccess(`Research complete! Analyzed ${data.count || data.profiles.length} competitors. Refreshing...`);
          console.log('‚úÖ [RESEARCH] Success! Reloading page in 2 seconds...');
          setTimeout(() => location.reload(), 2000);
        } else {
          console.error('üî¥ [RESEARCH] API returned success: false', data);
          throw new Error(data.error || 'Unknown error');
        }
      } catch (error) {
        console.error('üî¥ [RESEARCH] Exception caught:', {
          error,
          message: error.message,
          stack: error.stack,
          name: error.name,
        });
        
        const progressDiv = document.getElementById('research-progress');
        if (progressDiv) {
          progressDiv.innerHTML = `<p class="text-sm text-red-700">‚ùå Error: ${error.message}</p><p class="text-xs text-gray-600 mt-1">Check browser console for details.</p>`;
        }
        
        showError(`Research failed: ${error.message}`);
        
        const button = document.getElementById('run-all-research-btn') || document.querySelector('button[onclick*="runAllResearch"]');
        if (button) {
          hideLoading(button);
        }
      }
    }
    
    // Make function globally available and add click listener
    window.runAllResearch = runAllResearch;
    console.log('üîµ [RESEARCH] runAllResearch function registered globally');
    
    // Also try to attach event listener directly
    document.addEventListener('DOMContentLoaded', () => {
      const button = document.getElementById('run-all-research-btn');
      if (button) {
        console.log('üîµ [RESEARCH] Found button on DOMContentLoaded, attaching click listener');
        button.addEventListener('click', (e) => {
          e.preventDefault();
          runAllResearch(e);
        });
      } else {
        console.warn('‚ö†Ô∏è [RESEARCH] Button not found on DOMContentLoaded');
      }
    });
  </script>
</BaseLayout>
