      const originalText = button?.textContent || 'Analyze Now';
      showLoading(button, 'Analyzing...');
      
      try {
        const isLocal = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
        const apiUrl = isLocal 
          ? `/api/research/competitors-local?competitor=${encodeURIComponent(competitor)}`
          : `/.netlify/functions/research-competitors?competitor=${encodeURIComponent(competitor)}`;
        
        showMessage(`üîç Analyzing ${competitor}... This takes about 10-15 seconds.`, 'info');
        
        const response = await fetch(apiUrl, {
          method: 'GET',
          headers: { 'Content-Type': 'application/json' },
        });
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        
        if (data.success && data.profile) {
          const profile = data.profile;
          showMessage(`‚úÖ Analysis complete! Found ${profile.totalPosts || 0} posts and ${profile.topPosts?.length || 0} top performers.`, 'success');
          
