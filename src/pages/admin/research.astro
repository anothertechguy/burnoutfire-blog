          <div class="border border-gray-200 rounded-lg p-4 bg-white">
            <h4 class="font-semibold text-gray-900 mb-3">${profile.name}</h4>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <div class="text-gray-600">Total Posts Analyzed</div>
                <div class="text-xl font-bold text-gray-900">${profile.totalPosts || 0}</div>
              </div>
              <div>
                <div class="text-gray-600">Average Word Count</div>
                <div class="text-xl font-bold text-gray-900">${profile.content?.averageWordCount || 0}</div>
              </div>
            </div>
            ${profile.opportunities?.gaps?.length > 0 ? `
              <div class="mt-4 pt-4 border-t">
                <div class="font-semibold text-gray-900 mb-2">Content Gaps Found:</div>
                <ul class="text-sm text-gray-700 space-y-1">
                  ${profile.opportunities.gaps.map(gap => `<li>‚Ä¢ ${gap}</li>`).join('')}
                </ul>
              </div>
            ` : ''}
          </div>
        `;
      }
    }

    // Make functions globally available
    window.runResearch = runResearch;
    window.runAllResearch = runAllResearch;

    // Attach event listeners
    function initButtons() {
      // Individual competitor buttons
      document.querySelectorAll('.run-research-btn').forEach(button => {
        const competitor = button.getAttribute('data-competitor');
        if (competitor) {
          const newButton = button.cloneNode(true);
          button.parentNode?.replaceChild(newButton, button);
          newButton.addEventListener('click', (e) => {
            e.preventDefault();
            runResearch(competitor, e);
          });
        }
      });

      // "Run All" button
      const allButton = document.getElementById('run-all-research-btn');
      if (allButton) {
        const newButton = allButton.cloneNode(true);
        allButton.parentNode?.replaceChild(newButton, allButton);
        newButton.addEventListener('click', (e) => {
          e.preventDefault();
          runAllResearch(e);
        });
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initButtons);
    } else {
      initButtons();
    }
  </script>
</BaseLayout>
