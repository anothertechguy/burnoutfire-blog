// Helper to translate competition levels to human-readable
function explainCompetition(level: string): { text: string; meaning: string; color: string } {
  const explanations: Record<string, { text: string; meaning: string; color: string }> = {
    'very_low': {
      text: 'Very Easy to Rank',
      meaning: 'Few competitors are targeting this. You can likely rank on page 1 within 3-6 months with good content.',
      color: 'green'
    },
    'low': {
      text: 'Easy to Rank',
      meaning: 'Some competition exists, but it\'s manageable. With quality content, you can rank within 6-12 months.',
      color: 'blue'
    },
    'medium': {
      text: 'Moderate Competition',
      meaning: 'Several competitors exist. You\'ll need strong, comprehensive content to rank. Expect 12-18 months.',
      color: 'yellow'
    },
    'high': {
      text: 'Tough Competition',
      meaning: 'Many established sites compete here. Ranking will require exceptional content and time (18+ months).',
      color: 'red'
    }
  };
  return explanations[level] || { text: level, meaning: 'Unknown competition level', color: 'gray' };
}

function explainOpportunity(level: string): string {
  const explanations: Record<string, string> = {
    'high': 'This topic has high search volume and aligns perfectly with your brand. Strong potential for traffic and engagement.',
    'medium': 'Moderate search interest. Good topic if you have a unique angle or can provide exceptional value.',
    'low': 'Lower search volume, but might be worth it if it\'s highly relevant to your audience or fills a specific gap.'
  };
  return explanations[level] || 'Opportunity level not determined.';
}

const seo = {
  title: `Research Dashboard | ${SITE_CONFIG.title} Admin`,
  description: 'View research insights',
};
