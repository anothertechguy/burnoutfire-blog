---
import BaseLayout from '../../components/Layout/BaseLayout.astro';
import { getUserProfile, getWritingStyleReasoning } from '../../utils/agents/knowledge/userProfile';
import { getAllCompetitorProfiles, getCompetitorLearnings } from '../../utils/agents/knowledge/competitorProfiles';
import { getMarketingPlan, getWideMoatAnalysis } from '../../utils/agents/knowledge/marketingPlan';
import { findWideMoatOpportunities } from '../../utils/agents/research/wideMoatAnalysis';
import { SITE_CONFIG } from '../../config';

const userProfile = getUserProfile();
const competitorProfiles = getAllCompetitorProfiles();
const marketingPlan = getMarketingPlan();
const wideMoatOpportunities = findWideMoatOpportunities();
const competitorLearnings = getCompetitorLearnings();

const seo = {
  title: `Agent Learnings | ${SITE_CONFIG.title} Admin`,
  description: 'View agent knowledge and learnings',
};
---

<BaseLayout title="Agent Intelligence" description="What the AI knows about you and your competition" seo={seo}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/admin" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">‚Üê Back to Dashboard</a>
        <h1 class="text-3xl font-bold text-gray-900">Agent Intelligence</h1>
        <p class="text-gray-600 mt-2">See what the AI has learned about you, your competitors, and your content strategy</p>
      </div>

      <!-- Value Proposition -->
      <div class="bg-gradient-to-r from-purple-50 to-blue-50 border border-purple-200 rounded-lg p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-3">What This Page Shows You</h2>
        <p class="text-gray-700 mb-4">
          This is your AI's "brain" - everything it knows about you, your competitors, and your content strategy. 
          The AI uses this knowledge to write content that matches your voice and beats your competition.
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
          <div class="bg-white rounded p-3 border border-purple-100">
            <div class="font-semibold text-gray-900 mb-1">üë§ Your Profile</div>
            <div class="text-gray-600">What the AI knows about you (income, goals, writing style)</div>
          </div>
          <div class="bg-white rounded p-3 border border-purple-100">
            <div class="font-semibold text-gray-900 mb-1">üèÜ Competitors</div>
            <div class="text-gray-600">Analysis of 10+ competitor blogs and their best content</div>
          </div>
          <div class="bg-white rounded p-3 border border-purple-100">
            <div class="font-semibold text-gray-900 mb-1">üìà Strategy</div>
            <div class="text-gray-600">Content gaps, opportunities, and marketing plan</div>
          </div>
        </div>
      </div>

      <!-- Your Profile -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h2 class="text-xl font-semibold text-gray-900">Your Profile</h2>
            <p class="text-sm text-gray-600 mt-1">What the AI knows about you (used to personalize content)</p>
          </div>
          <a href="/admin/profile" class="px-4 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700">
            Edit Profile
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-3">Financial Situation</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-gray-600">Income Level:</span>
                <span class="font-medium text-gray-900 capitalize">{userProfile.situation.incomeLevel}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Dual Income:</span>
                <span class="font-medium text-gray-900">{userProfile.situation.dualIncome ? 'Yes' : 'No'}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Savings Rate:</span>
                <span class="font-medium text-gray-900">{userProfile.situation.savingsRate}%</span>
              </div>
              <div class="mt-3 pt-3 border-t border-gray-200">
                <div class="text-gray-600 mb-1">Your Strategy:</div>
                <div class="text-sm text-gray-700 bg-white p-2 rounded">{userProfile.situation.currentStrategy}</div>
              </div>
            </div>
          </div>

          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-900 mb-3">Goals & Preferences</h3>
            <div class="space-y-2 text-sm">
              <div>
                <div class="text-gray-600 mb-1">Your Goals:</div>
                <ul class="text-gray-700 space-y-1">
                  {userProfile.situation.goals.map(goal => (
                    <li class="flex items-center">
                      <span class="text-green-600 mr-2">‚úì</span>
                      {goal}
                    </li>
                  ))}
                </ul>
              </div>
              <div class="mt-3 pt-3 border-t border-gray-200">
                <div class="text-gray-600 mb-1">Writing Tone:</div>
                <div class="flex flex-wrap gap-1">
                  {userProfile.writingStyle.tone.map(t => (
                    <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded">{t}</span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Competitor Profiles -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h2 class="text-xl font-semibold text-gray-900">Competitor Analysis</h2>
            <p class="text-sm text-gray-600 mt-1">
              {competitorProfiles.length > 0 
                ? `Analyzed ${competitorProfiles.length} competitors. See their strengths, weaknesses, and content gaps below.`
                : 'No competitors analyzed yet. Click "Run Research" to analyze your competition.'}
            </p>
          </div>
          <button 
            id="run-competitor-research-btn"
            class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium shadow-sm"
          >
            üîç Run Competitor Research
          </button>
        </div>

        {competitorProfiles.length > 0 ? (
          <div class="space-y-6">
            {competitorProfiles.map(profile => (
              <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-1">{profile.name}</h3>
                    <p class="text-sm text-gray-600">{profile.focus}</p>
                    <p class="text-xs text-gray-500 mt-1">Last analyzed: {new Date(profile.lastAnalyzed).toLocaleDateString()}</p>
                  </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                  <div class="bg-blue-50 rounded-lg p-3">
                    <div class="text-xs text-gray-600 mb-1">Average Post Length</div>
                    <div class="text-2xl font-bold text-gray-900">{profile.content.averageWordCount.toLocaleString()}</div>
                    <div class="text-xs text-gray-500 mt-1">words per post</div>
                  </div>
                  <div class="bg-green-50 rounded-lg p-3">
                    <div class="text-xs text-gray-600 mb-1">Content Gaps Found</div>
                    <div class="text-2xl font-bold text-gray-900">{profile.opportunities.gaps.length}</div>
                    <div class="text-xs text-gray-500 mt-1">topics they're missing</div>
                  </div>
                  <div class="bg-yellow-50 rounded-lg p-3">
                    <div class="text-xs text-gray-600 mb-1">Weaknesses Identified</div>
                    <div class="text-2xl font-bold text-gray-900">{profile.content.weaknesses.length}</div>
                    <div class="text-xs text-gray-500 mt-1">areas you can outperform</div>
                  </div>
                </div>

                {profile.opportunities.gaps.length > 0 && (
                  <div class="bg-green-50 border-l-4 border-green-500 rounded-r-lg p-4 mb-4">
                    <h4 class="font-semibold text-gray-900 mb-2">üéØ Your Opportunities (What They're Missing):</h4>
                    <ul class="text-sm text-gray-700 space-y-1">
                      {profile.opportunities.gaps.map(gap => (
                        <li class="flex items-start">
                          <span class="text-green-600 mr-2 mt-0.5">‚Ä¢</span>
                          <span>{gap}</span>
                        </li>
                      ))}
                    </ul>
                    <p class="text-xs text-gray-600 mt-3 italic">
                      üí° These are topics {profile.name} isn't covering well. You can create content here and likely outrank them.
                    </p>
                  </div>
                )}

                {profile.content.weaknesses.length > 0 && (
                  <div class="bg-yellow-50 border-l-4 border-yellow-500 rounded-r-lg p-4">
                    <h4 class="font-semibold text-gray-900 mb-2">‚ö° How You Can Outperform Them:</h4>
                    <ul class="text-sm text-gray-700 space-y-1">
                      {profile.content.weaknesses.map(weakness => (
                        <li class="flex items-start">
                          <span class="text-yellow-600 mr-2 mt-0.5">‚Ä¢</span>
                          <span>{weakness}</span>
                        </li>
                      ))}
                    </ul>
                    <p class="text-xs text-gray-600 mt-3 italic">
                      üí° Focus on these areas in your content to provide more value than {profile.name}.
                    </p>
                  </div>
                )}
              </div>
            ))}
          </div>
        ) : (
          <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-lg p-12 text-center">
            <div class="text-4xl mb-4">üîç</div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">No Competitor Data Yet</h3>
            <p class="text-gray-600 mb-4">
              Click "Run Competitor Research" above to analyze your competition. 
              This will show you what they're doing well, what they're missing, and where you can outrank them.
            </p>
            <p class="text-sm text-gray-500">
              ‚è±Ô∏è Takes 30-60 seconds. We'll analyze 10+ competitors and show you actionable insights.
            </p>
          </div>
        )}
      </div>

      <!-- Marketing Plan -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Content Strategy</h2>
        <p class="text-sm text-gray-600 mb-6">Based on competitor analysis, here's what topics to focus on</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-semibold text-gray-900 mb-3">High-Priority Topics</h3>
            <div class="space-y-3">
              {marketingPlan.content.contentGaps.filter(g => g.opportunity === 'high').map(gap => (
                <div class="border-l-4 border-green-500 pl-4 py-2 bg-green-50 rounded-r">
                  <div class="font-medium text-gray-900">{gap.topic}</div>
                  <div class="text-xs text-gray-600 mt-1">{gap.reasoning}</div>
                </div>
              ))}
            </div>
          </div>
          <div>
            <h3 class="font-semibold text-gray-900 mb-3">Target Keywords</h3>
            <div class="flex flex-wrap gap-2">
              {marketingPlan.seo.primaryKeywords.map(kw => (
                <span class="px-3 py-1 bg-blue-100 text-blue-800 text-sm rounded font-medium">{kw}</span>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Wide Moat Opportunities -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Best Content Opportunities</h2>
        <p class="text-sm text-gray-600 mb-6">Topics with low competition where you can establish authority</p>
        
        <div class="space-y-4">
          {wideMoatOpportunities.slice(0, 5).map((opp, i) => (
            <div class="border border-gray-200 rounded-lg p-4 hover:border-purple-500 transition-colors">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <span class="text-2xl font-bold text-gray-400">#{i + 1}</span>
                    <div>
                      <h3 class="text-lg font-semibold text-gray-900">{opp.niche}</h3>
                      <p class="text-sm text-gray-600">Keyword: {opp.keyword}</p>
                    </div>
                  </div>
                  <div class="bg-purple-50 rounded-lg p-3 mb-3">
                    <div class="text-sm font-medium text-gray-900 mb-1">Why This Is Your Opportunity:</div>
                    <div class="text-sm text-gray-700">{opp.moat}</div>
                  </div>
                  <div class="text-sm text-gray-700">
                    <strong>Strategy:</strong> {opp.strategy}
                  </div>
                </div>
                <div class="text-right ml-4">
                  <div class="text-sm text-gray-600">Difficulty</div>
                  <div class="text-3xl font-bold text-gray-900">{opp.difficulty}</div>
                  <div class="text-xs text-gray-500">/ 100</div>
                  <div class="text-xs text-gray-600 mt-2">
                    {opp.difficulty < 30 ? 'üü¢ Easy' : opp.difficulty < 60 ? 'üü° Moderate' : 'üü† Challenging'}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <script>
    async function runCompetitorResearch(event) {
      console.log('üîµ [LEARNINGS] Starting competitor research');
      
      const button = document.getElementById('run-competitor-research-btn') || event?.target;
      const originalText = button?.textContent || 'üîç Run Competitor Research';
      button.disabled = true;
      button.innerHTML = '‚è≥ Analyzing...';
      button.classList.add('opacity-75', 'cursor-not-allowed');
      
      // Show progress message
      const messageDiv = document.createElement('div');
      messageDiv.className = 'fixed top-4 right-4 bg-blue-100 border border-blue-400 text-blue-700 px-6 py-4 rounded-lg shadow-lg z-50 max-w-md';
      messageDiv.innerHTML = `
        <div class="flex items-center space-x-3">
          <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
          <div>
            <div class="font-semibold">Analyzing Competitors...</div>
            <div class="text-sm">This takes 30-60 seconds. Analyzing RSS feeds and scoring posts.</div>
          </div>
        </div>
      `;
      document.body.appendChild(messageDiv);
      
      try {
        const isLocal = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
        const apiUrl = isLocal 
          ? '/api/research/competitors-local'
          : '/.netlify/functions/research-competitors';
        
        const response = await fetch(apiUrl, { method: 'GET' });
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        
        if (data.success) {
          messageDiv.className = 'fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded-lg shadow-lg z-50 max-w-md';
          messageDiv.innerHTML = `
            <div class="flex items-center space-x-3">
              <div class="text-2xl">‚úÖ</div>
              <div>
                <div class="font-semibold">Analysis Complete!</div>
                <div class="text-sm">Analyzed ${data.count || data.profiles.length} competitors. Found ${data.profiles.reduce((sum, p) => sum + (p.gaps?.length || 0), 0)} content gaps.</div>
              </div>
            </div>
          `;
          
          setTimeout(() => {
            messageDiv.remove();
            location.reload();
          }, 3000);
        } else {
          throw new Error(data.error || 'Unknown error');
        }
      } catch (error) {
        console.error('Error:', error);
        messageDiv.className = 'fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg shadow-lg z-50 max-w-md';
        messageDiv.innerHTML = `
          <div>
            <div class="font-semibold">‚ùå Analysis Failed</div>
            <div class="text-sm mt-1">${error.message}</div>
            <div class="text-xs mt-2">Check browser console (F12) for details.</div>
          </div>
        `;
        setTimeout(() => messageDiv.remove(), 5000);
        button.disabled = false;
        button.textContent = originalText;
        button.classList.remove('opacity-75', 'cursor-not-allowed');
      }
    }
    
    window.runCompetitorResearch = runCompetitorResearch;
    
    // Attach event listener
    function attachButton() {
      const button = document.getElementById('run-competitor-research-btn');
      if (button) {
        const newButton = button.cloneNode(true);
        button.parentNode?.replaceChild(newButton, button);
        newButton.addEventListener('click', (e) => {
          e.preventDefault();
          runCompetitorResearch(e);
        });
      }
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', attachButton);
    } else {
      attachButton();
    }
  </script>
</BaseLayout>
