---
import BaseLayout from '../../components/Layout/BaseLayout.astro';
import { getUserProfile, getWritingStyleReasoning } from '../../utils/agents/knowledge/userProfile';
import { getAllCompetitorProfiles, getCompetitorLearnings } from '../../utils/agents/knowledge/competitorProfiles';
import { getMarketingPlan, getWideMoatAnalysis } from '../../utils/agents/knowledge/marketingPlan';
import { findWideMoatOpportunities } from '../../utils/agents/research/wideMoatAnalysis';
import { SITE_CONFIG } from '../../config';

const userProfile = getUserProfile();
const competitorProfiles = getAllCompetitorProfiles();
const marketingPlan = getMarketingPlan();
const wideMoatOpportunities = findWideMoatOpportunities();
const competitorLearnings = getCompetitorLearnings();

const seo = {
  title: `Agent Learnings | ${SITE_CONFIG.title} Admin`,
  description: 'View agent knowledge and learnings',
};
---

<BaseLayout title="Agent Learnings" description="Agent knowledge base" seo={seo}>
  <div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/admin" class="text-blue-600 hover:text-blue-800 mb-4 inline-block">← Back to Dashboard</a>
        <h1 class="text-3xl font-bold text-gray-900">Agent Learnings & Knowledge Base</h1>
        <p class="text-gray-600 mt-2">See what the agents have learned about you, competitors, and strategy</p>
      </div>

      <!-- User Profile -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Your Profile</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Current Situation</h3>
            <ul class="text-sm text-gray-700 space-y-1">
              <li>• Income Level: <strong class="capitalize">{userProfile.situation.incomeLevel}</strong></li>
              <li>• Dual Income: <strong>{userProfile.situation.dualIncome ? 'Yes' : 'No'}</strong></li>
              <li>• Savings Rate: <strong>{userProfile.situation.savingsRate}%</strong></li>
              <li>• Strategy: <span class="text-xs block mt-1 p-2 bg-gray-50 rounded">{userProfile.situation.currentStrategy}</span></li>
            </ul>
          </div>
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Goals</h3>
            <ul class="text-sm text-gray-700 space-y-1">
              {userProfile.situation.goals.map(goal => (
                <li>• {goal}</li>
              ))}
            </ul>
          </div>
        </div>
        <div class="mt-4 pt-4 border-t">
          <h3 class="font-medium text-gray-900 mb-2">Writing Style Preferences</h3>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <span class="text-gray-600">Tone:</span>
              <div class="flex flex-wrap gap-1 mt-1">
                {userProfile.writingStyle.tone.map(t => (
                  <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded">{t}</span>
                ))}
              </div>
            </div>
            <div>
              <span class="text-gray-600">Voice:</span>
              <p class="text-gray-700 mt-1 text-xs">{userProfile.writingStyle.voice}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Writing Style Reasoning -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Writing Style Reasoning</h2>
        <div class="prose max-w-none text-sm text-gray-700 whitespace-pre-line bg-gray-50 p-4 rounded">
          {getWritingStyleReasoning()}
        </div>
      </div>

      <!-- Competitor Profiles -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">Competitor Profiles</h2>
          <button 
            onclick="runCompetitorResearch()"
            class="px-4 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 transition-colors"
          >
            Run Research Now
          </button>
        </div>
        {competitorProfiles.length > 0 ? (
          <div class="space-y-4">
            {competitorProfiles.map(profile => (
              <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 transition-colors">
                <div class="flex items-start justify-between mb-3">
                  <div>
                    <h3 class="font-semibold text-gray-900 mb-1">{profile.name}</h3>
                    <p class="text-xs text-gray-600">{profile.focus}</p>
                  </div>
                  <span class="text-xs text-gray-500">
                    Analyzed: {new Date(profile.lastAnalyzed).toLocaleDateString()}
                  </span>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm mb-3">
                  <div>
                    <span class="text-gray-600">Avg Word Count:</span>
                    <span class="font-semibold ml-2 text-gray-900">{profile.content.averageWordCount}</span>
                  </div>
                  <div>
                    <span class="text-gray-600">Readability:</span>
                    <span class="font-semibold ml-2 text-gray-900">{profile.content.averageReadability}</span>
                  </div>
                  <div>
                    <span class="text-gray-600">Strengths:</span>
                    <span class="ml-2 text-gray-700">{profile.content.strengths.slice(0, 2).join(', ')}</span>
                  </div>
                  <div>
                    <span class="text-gray-600">Weaknesses:</span>
                    <span class="ml-2 text-gray-700">{profile.content.weaknesses.slice(0, 2).join(', ')}</span>
                  </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-3 border-t">
                  <div>
                    <p class="text-sm font-medium text-gray-900 mb-1">Content Gaps (Our Opportunities):</p>
                    <ul class="text-sm text-gray-700 space-y-1">
                      {profile.opportunities.gaps.map(gap => (
                        <li class="flex items-start">
                          <span class="text-green-600 mr-2">✓</span>
                          <span>{gap}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-900 mb-1">Unique Angles:</p>
                    <ul class="text-sm text-gray-700 space-y-1">
                      {profile.opportunities.angles.map(angle => (
                        <li class="flex items-start">
                          <span class="text-blue-600 mr-2">→</span>
                          <span>{angle}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
                {profile.samplePosts.length > 0 && (
                  <div class="mt-3 pt-3 border-t">
                    <p class="text-xs font-medium text-gray-700 mb-2">Sample Posts Analyzed:</p>
                    <div class="space-y-1">
                      {profile.samplePosts.slice(0, 3).map(post => (
                        <div class="text-xs text-gray-600">
                          • <a href={post.url} target="_blank" class="text-blue-600 hover:underline">{post.title}</a> ({post.wordCount} words)
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            ))}
          </div>
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-600 mb-4">No competitor research completed yet.</p>
            <p class="text-sm text-gray-500 mb-6">Click "Run Research Now" to analyze competitors via RSS feeds and build profiles.</p>
            <button 
              onclick="runCompetitorResearch()"
              class="px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors font-medium"
            >
              Run Competitor Research
            </button>
          </div>
        )}
      </div>

      <!-- Digital Marketing Plan -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Digital Marketing Plan</h2>
        <div class="space-y-6">
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Positioning</h3>
            <p class="text-sm text-gray-700 bg-gray-50 p-3 rounded">{marketingPlan.strategy.positioning}</p>
          </div>
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Unique Value Proposition</h3>
            <p class="text-sm text-gray-700 bg-gray-50 p-3 rounded">{marketingPlan.strategy.uniqueValueProposition}</p>
          </div>
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Competitive Advantages</h3>
            <ul class="text-sm text-gray-700 space-y-2">
              {marketingPlan.strategy.competitiveAdvantage.map(adv => (
                <li class="flex items-start">
                  <span class="text-green-600 mr-2 mt-1">✓</span>
                  <span>{adv}</span>
                </li>
              ))}
            </ul>
          </div>
          <div>
            <h3 class="font-medium text-gray-900 mb-2">Content Gaps Identified</h3>
            <div class="space-y-3">
              {marketingPlan.content.contentGaps.map(gap => (
                <div class={`border-l-4 pl-3 py-2 ${
                  gap.opportunity === 'high' 
                    ? 'border-green-500 bg-green-50' 
                    : gap.opportunity === 'medium'
                    ? 'border-yellow-500 bg-yellow-50'
                    : 'border-gray-500 bg-gray-50'
                }`}>
                  <p class="text-sm font-medium text-gray-900">{gap.topic}</p>
                  <p class="text-xs text-gray-600 mt-1">Priority: <strong class="capitalize">{gap.opportunity}</strong> - {gap.reasoning}</p>
                </div>
              ))}
            </div>
          </div>
          <div>
            <h3 class="font-medium text-gray-900 mb-2">SEO Strategy</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <p class="text-xs font-medium text-gray-700 mb-1">Primary Keywords:</p>
                <div class="flex flex-wrap gap-1">
                  {marketingPlan.seo.primaryKeywords.map(kw => (
                    <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded">{kw}</span>
                  ))}
                </div>
              </div>
              <div>
                <p class="text-xs font-medium text-gray-700 mb-1">SERP Opportunities:</p>
                <ul class="text-xs text-gray-700 space-y-1">
                  {marketingPlan.seo.serpOpportunities.map(opp => (
                    <li>• {opp.keyword}: {opp.opportunity}</li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Wide Moat Opportunities -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Wide Moat Opportunities</h2>
        <p class="text-sm text-gray-600 mb-4">Niches with defensible competitive advantages and low competition</p>
        <div class="space-y-4">
          {wideMoatOpportunities.map((opp, i) => (
            <div class="border border-gray-200 rounded-lg p-4 hover:border-purple-500 transition-colors">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <span class="text-2xl font-bold text-gray-400">#{i + 1}</span>
                    <h3 class="text-lg font-semibold text-gray-900">{opp.niche}</h3>
                    <span class={`px-2 py-1 text-xs rounded font-medium ${
                      opp.competition === 'very_low' 
                        ? 'bg-green-100 text-green-800' 
                        : opp.competition === 'low'
                        ? 'bg-blue-100 text-blue-800'
                        : 'bg-yellow-100 text-yellow-800'
                    }`}>
                      {opp.competition.replace('_', ' ')} competition
                    </span>
                  </div>
                  <p class="text-sm text-gray-700 mb-2"><strong>Keyword:</strong> {opp.keyword}</p>
                  <p class="text-sm text-gray-700 mb-2"><strong>Moat:</strong> {opp.moat}</p>
                  <p class="text-sm text-gray-700 mb-2"><strong>Strategy:</strong> {opp.strategy}</p>
                </div>
                <div class="text-right ml-4">
                  <div class="text-sm text-gray-600">Timeline</div>
                  <div class="text-lg font-bold text-gray-900">{opp.timeline}</div>
                  <div class="text-xs text-gray-500 mt-1">Difficulty: {opp.difficulty}</div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <script>
    async function runCompetitorResearch() {
      const button = event.target;
      const originalText = button.textContent;
      button.disabled = true;
      button.textContent = '⏳ Researching...';
      
      // Show progress indicator
      const progressDiv = document.createElement('div');
      progressDiv.className = 'mt-4 p-4 bg-blue-50 border border-blue-200 rounded';
      progressDiv.innerHTML = '<p class="text-sm text-blue-700">⏳ Starting research... This will take 30-60 seconds.</p>';
      button.parentElement.appendChild(progressDiv);
      
      try {
        progressDiv.innerHTML = '<p class="text-sm text-blue-700">⏳ Fetching competitor RSS feeds and analyzing content...</p>';
        
        const response = await fetch('/.netlify/functions/research-competitors', {
          method: 'GET',
        });
        
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}: ${response.statusText}`);
        }
        
        const data = await response.json();
        
        if (data.success) {
          progressDiv.innerHTML = `<p class="text-sm text-green-700">✅ Analyzed ${data.count || data.profiles.length} competitors!</p><p class="text-xs text-gray-600 mt-1">Found ${data.profiles.reduce((sum, p) => sum + (p.samplePosts?.length || 0), 0)} posts analyzed.</p>`;
          alert(`✅ Research complete! Analyzed ${data.count || data.profiles.length} competitors.\n\nRefresh page to see detailed profiles.`);
          setTimeout(() => location.reload(), 2000);
        } else {
          throw new Error(data.error || 'Unknown error');
        }
      } catch (error) {
        console.error('Error:', error);
        progressDiv.innerHTML = `<p class="text-sm text-red-700">❌ Error: ${error.message}</p><p class="text-xs text-gray-600 mt-1">Check browser console for details.</p>`;
        alert(`❌ Error running research: ${error.message}\n\nCheck browser console for details.`);
      } finally {
        button.disabled = false;
        button.textContent = originalText;
      }
    }
  </script>
</BaseLayout>
